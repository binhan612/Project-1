// Navigation bar

// Navigation bar large
ul.nav-bar-large
	li.nav-bar__item.nav-bar__item--logo
		img(src="assets/image/logo.png" alt="logo")
	li.nav-bar__item
		a(href='#') Trang chủ
	li.nav-bar__item
		a(href='#') Rượu Vang đỏ
		ul.nav-bar__item-dropdown-content
			each columnTittle in ['RƯỢU NGOẠI', 'RƯỢU VANG', 'RƯỢU NGOẠI']
				li.nav-bar__item-dropdown-content--column
					h4=columnTittle
					ul.nav-bar__item-dropdown-content--column-list
						each columnListItem in ['Rượu Chivas', 'Hàng độc-Rượu độc đáo', 'Johnnie Walker', 'Rượu Wiskey', 'Rượu Remy Martin', 'Rượu Gerlemmoraing']
							li
								a(href='#')=columnListItem
			li.nav-bar__item-dropdown-content--column.nav-bar__item-dropdown-content--column-image
				img(src='assets/image/12.jpg' alt='wine')
	each navBarItem1 in ['Rượu trắng', 'Champagne', 'Thông tin', 'Blog', 'Liên hệ' ]
		li.nav-bar__item
			a(href='#')=  navBarItem1

// Navigation bar small
